<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="service.inhibit_shutdown" name="Inhibit shutdown" version="0.2" provider-name="Hans van Schoot">
    <requires>
        <import addon="xbmc.python" version="2.0"/>
    </requires>
    <extension point="xbmc.service" library="inhibit_shutdown.py" start="[login|startup]" />
    <extension point="xbmc.addon.metadata">
        <platform>linux</platform>
        <summary lang="en">Inhibit idle shutdown when TCP conections are open.</summary>
        <description>Inhibit idle shutdown when specified network connections are opened to this computer.</description>
    </extension>
</addon>
